# MongoDB connection string
MONGO_URI=mongodb://localhost:27017/roblox

# API authentication key (set to a strong random value)
API_KEY=your_api_key_here

# JWT secret for signing tokens (set to a strong random value)
JWT_SECRET=your_jwt_secret_here

# Current schema version (integer)
SCHEMA_VERSION=1

# Server port
PORT=5000

